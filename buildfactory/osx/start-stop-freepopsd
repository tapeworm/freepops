#!/bin/sh
cd /Applications/FreePOPs.app/
if [ -e pid.txt ]; then
	kill `cat pid.txt`
	rm -f pid.txt
	Contents/MacOS/fmessage 'FreePOPs stopped.'
else
	src/freepopsd -v -b 127.0.0.1 -l log.txt &
	echo $! > pid.txt
	Contents/MacOS/fmessage 'FreePOPs started. To stop it, double click again on it.' 
fi
